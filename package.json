{
	"name": "chatguessr",
	"version": "1.0.8",
	"description": "Chatbot for Geoguessr",
	"author": "MrAmericanMike & T.ZHF",
	"license": "ISC",
	"main": "./dist/cg-main/main.js",
	"dependencies": {
		"@paulrosania/better-sqlite3": "^8.1.0",
		"axios": "^0.23.0",
		"codegrid-js": "git+https://github.com/Tzhf/codegrid-js.git",
		"datatables.net": "^1.11.3",
		"datatables.net-buttons": "^2.0.1",
		"datatables.net-plugins": "^1.10.24",
		"datatables.net-scroller": "^2.0.5",
		"dotenv": "^8.2.0",
		"electron-store": "^8.0.1",
		"electron-updater": "^4.3.9",
		"jquery": "^3.6.0",
		"jquery-ui-dist": "^1.12.1",
		"p-map": "^4.0.0",
		"tmi.js": "^1.8.5"
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.61",
		"@electron-forge/maker-deb": "^6.0.0-beta.61",
		"@electron-forge/maker-rpm": "^6.0.0-beta.61",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.61",
		"@electron-forge/maker-zip": "^6.0.0-beta.61",
		"@parcel/transformer-inline-string": "^2.0.0",
		"@tsconfig/node16": "^1.0.2",
		"@types/datatables.net-buttons": "^1.4.7",
		"@types/datatables.net-scroller": "^1.4.1",
		"@types/google.maps": "^3.45.6",
		"@types/jquery": "^3.5.7",
		"@types/jqueryui": "^1.12.16",
		"@types/node": "^12.20.29",
		"@types/tmi.js": "^1.8.0",
		"electron": "^15.1.2",
		"electron-builder": "^22.13.1",
		"parcel": "^2.0.0",
		"typescript": "^4.4.4"
	},
	"scripts": {
		"start": "electron .",
		"start2": "parcel build --no-optimize && electron-forge start",
		"package": "parcel build && electron-forge package",
		"make": "electron-forge make",
		"pack": "electron-builder --dir",
		"postinstall": "electron-builder install-app-deps",
		"build": "electron-builder build --win --publish never",
		"deploy": "electron-builder build --win --publish always"
	},
	"config": {
		"forge": {
			"packagerConfig": {
				"asar": true
			},
			"makers": [
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "chatguessr"
					}
				},
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"darwin"
					]
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {}
				}
			]
		}
	},
	"targets": {
		"cg-main": {
			"context": "electron-main",
			"source": "./src/main.js",
			"sourceMap": { "inline": true }
		},
		"cg-preload": {
			"context": "electron-renderer",
			"source": "./src/preload.js",
			"scopeHoist": false,
			"sourceMap": { "inline": true }
		},
		"settings": {
			"context": "electron-renderer",
			"outputFormat": "commonjs",
			"source": "./src/Windows/Settings/settings.html",
			"publicUrl": ".",
			"sourceMap": { "inline": true }
		}
	},
	"build": {
		"appId": "com.tzhf.chatguessr",
		"productName": "Chatguessr",
		"win": {
			"target": "nsis",
			"icon": "build/icon.ico"
		},
		"nsis": {
			"deleteAppDataOnUninstall": true
		},
		"publish": [
			{
				"provider": "github",
				"owner": "tzhf",
				"repo": "chatguessr",
				"private": true
			}
		]
	}
}
